<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Изображение кошки -->
        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_cat_image" />

        <!-- Информация о кошке -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <!-- Название и происхождение кошки -->
            <TextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Cat Name"
                tools:text="Siamese" />

            <TextView
                android:id="@+id/cat_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Cat Origin"
                tools:text="Thailand" />

            <!-- Длина и дружелюбие кошки -->
            <TextView
                android:id="@+id/cat_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Length: Medium"
                tools:text="Medium" />

            <TextView
                android:id="@+id/cat_family_friendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Family Friendly: 4/5"
                tools:text="Family Friendly: 4/5" />

            <!-- Линейка с уровнями линьки кошки -->
            <TextView
                android:id="@+id/cat_shedding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Shedding: 3/5"
                tools:text="Shedding: 3/5" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
